  {
    "author": "https://github.com/kenorb/BlockSec",
    "background": {
      "background_page": "pages/background.html",
      "scripts": ["js/background.js"],
      "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "16": "images/icon.svg",
            "48": "images/icon.svg"
        },
        "default_title": "BlockSec",
        "default_popup": "pages/popup.html"
    },
    "content_scripts": [
        {
            "matches": [
            "https://*/*"
            ],
            "js": [
                "js/contentScript.js"
            ],
            "run_at": "document_start",
            "all_frames": false
        }
    ],
    "default_locale": "en",
    "description": "Privacy extension to keep your browsing safe.",
    "manifest_version": 2,
    "name": "BlockSec",
    "permissions": [
        "storage",
        "activeTab",
        "notifications",
        "webRequest",
        "webRequestBlocking"
    ],
    "version": "1.0",
    "web_accessible_resources": [
        "pages/warning.html"
    ]
  }